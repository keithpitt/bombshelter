<h1>Login Required</h1>

<%= @error ? ("<p>" + @error + "</p>") : '' %>

<p><br/>Please enter your username and password.</p>

<% form_tag :controller => 'pages', :action => 'login' do %>

   <table>
      <tr>
         <th>Username</th>
         <td><%= text_field "user", "email", :value => @email, :size => 22 %></td>
      </tr>
      <tr>
         <th>Password</th>
         <td><%= password_field "user", "password", :size => 22 %></td>
      </tr>
      <tr>
         <td colspan="2"><input type="submit" value="Login"/></td>
      </tr>
   </table>

<% end %>